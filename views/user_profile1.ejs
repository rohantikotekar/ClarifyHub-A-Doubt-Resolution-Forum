<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('bootstrapcss') %>
        <title>Profile Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <style>
      body {
        height: 63vh;
      }
      .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 70%;
        height: 50vh;
        margin: auto;
        /* text-align: center; */
      }

      .title {
        color: grey;
        font-size: 18px;
      }

      button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
      }

      a {
        text-decoration: none;
        font-size: 22px;
        color: black;
      }

      button:hover,
      a:hover {
        opacity: 0.7;
      }
    </style>
  </head>
  <body>
    <%- include('header') %>
    <br>
    <div class="container w-100">
        <div class="card">
        <div class="text-center w-50 py-3 mx-auto">
            <h3>  <%= (user.name).charAt(0).toUpperCase() + user.name.slice(1)%> </h3>
        </div>
        <hr style="padding: 0.7rem;"/>
        <div>
            <div class="container ">
                <h4>Username: <%= (user.username).charAt(0).toUpperCase() + user.username.slice(1) %></h4>
                <h5>Doubts Asked:</h5>
            </div>
        </div>
       

        <div class="d-flex flex-md-column align-items-center">
            <% doubts.forEach((doubt)=> { %>
                <div class=" w-50">
                    <div class="card-header">
                        <!-- <a href="/r/< doubt.category >" target="_blank" rel="noopener noreferrer">< doubt.category ></a> -->
                        <a href="/doubts/edit/<%= doubt._id %> ">Edit</a> <span>|</span>
                        <a href="/doubts/delete/<%= doubt._id %> ">Delete</a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= doubt.title %>
                        </h5>
                        <!-- <p class="card-text">With supporting text below as a natural lead-in to additional content.</p> -->
                        <a href="/doubts/<%= doubt._id %>" class="">View..</a>
                    </div>
                </div>
                <br>
                <% }); %>
        </div>
    </div>
    
     
    </div>
  </body>
</html>
